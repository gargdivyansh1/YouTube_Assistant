{
  "manifest_version": 3,
  "name": "YouTube AI Assistant",
  "version": "1.0",
  "description": "Ask questions about any YouTube video directly.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://www.youtube.com/*",
    "http://127.0.0.1:8000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/watch*"],
      "js": ["content.js"]
    }
  ]
}
